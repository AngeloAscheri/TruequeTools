@page "/estadisticas"

@using TruequeTools.Entities

@rendermode @(new InteractiveServerRenderMode(prerender:false))

@attribute [Authorize(Roles = "Admin")]

<div class="row">
    <div class="col-lg-12 pt-4 pb-4 border">
        <h1 style="text-align:center">Estadisticas</h1>
        <h2 style="text-align:center">Conoce tus Rendimientos </h2>
        <hr />
        <div class="form-floating mb-3">
            @if (cargando)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only"></span>
                    </div>
                </div>
            }
            else
            {
                @if (trueques.Count == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        No hay datos para mostrar...
                    </div>
                }
                else
                {
                    <h1>GRAFICOS CON ESTADISTICAS</h1>
                }
            }
        </div> 
    </div>
</div>

@code {

    List<Trueque> trueques = new List<Trueque>();

    bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        //lectura de trueques completados
        cargando = false;
    }

}
