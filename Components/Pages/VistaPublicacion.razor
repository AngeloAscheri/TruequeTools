@page "/publicacion/{Id:int}"

@using TruequeTools.Data
@using TruequeTools.Entities

@inject TruequeToolsDataContext context
@inject NavigationManager NavMan
@inject IServiciosPublicacion PublicacionService
@inject IServiciosUsuario UsuarioService
@inject IServiciosPregunta PreguntaService
@inject IServiciosSucursal SucursalService

@rendermode @(new InteractiveServerRenderMode(prerender:false))

@attribute [Authorize(Roles = "Admin,User")]

<div>
    <ul class="list-group" style="padding-bottom:1.1rem">
        <li class="list-group-item"><h1>Publicacion N°@Id</h1></li>
        @if (cargando)
        {
            <li class="list-group-item"><h3>Cargando...</h3></li>
        }
        else
        {
            @if (PublicacionActual.Nombre != null)
            {

                context.Entry(PublicacionActual).Reference(p => p.Usuario).Load();
                context.Entry(PublicacionActual).Collection(p => p.Preguntas!).Load();
                context.Entry(PublicacionActual).Reference(p => p.Sucursal).Load();
                context.Entry(PublicacionActual).Reference(p => p.Categoria).Load();

                <li class="list-group-item"><h3>@PublicacionActual.Nombre</h3></li>
                <li class="list-group-item">
                    @if (PublicacionActual.FotoUrl == null)
                    {
                        <img class="card-img-top-svg" src=resources/blank.svg alt="Foto del Producto">
                    }
                    else
                    {
                        <img class="card-img-top" src=images/@PublicacionActual.FotoUrl alt="Foto del Producto">
                    }
                </li>
                <li class="list-group-item">@PublicacionActual.Descripcion</li>
                <li class="list-group-item">Publicado el @PublicacionActual.FechaPublicacion por: @PublicacionActual.Usuario!.Email</li>
                <li class="list-group-item">Sucursal de intercambio: @PublicacionActual.Sucursal!.Nombre</li>
                <li class="list-group-item">Categoría: @PublicacionActual.Categoria!.Nombre</li>
                <li class="list-group-item">
                    <div>
                        Preguntas
                        @if (PublicacionActual.Preguntas!.Count != 0)
                        {
                            @foreach (var pregunta in PublicacionActual.Preguntas)
                            {
                                <div class="mb-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">@pregunta.Texto</li>
                                        <li class="list-group-item">@pregunta.Respuesta</li>
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="mb-2">
                                <ul class="list-group">
                                    <li class="list-group-item">todavia no hay preguntas en la publicacion...</li>
                                </ul>
                            </div>

                        }
                    </div>
                </li>
                <li class="list-group-item">
                    <button class="btn btn-dark" @onclick="Ofertar">
                        Ofertar
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5m-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5" />
                        </svg>
                    </button>
                    <NavLink href="" class="btn btn-secondary">
                        Preguntar
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-patch-question" viewBox="0 0 16 16">
                            <path d="M8.05 9.6c.336 0 .504-.24.554-.627.04-.534.198-.815.847-1.26.673-.475 1.049-1.09 1.049-1.986 0-1.325-.92-2.227-2.262-2.227-1.02 0-1.792.492-2.1 1.29A1.7 1.7 0 0 0 6 5.48c0 .393.203.64.545.64.272 0 .455-.147.564-.51.158-.592.525-.915 1.074-.915.61 0 1.03.446 1.03 1.084 0 .563-.208.885-.822 1.325-.619.433-.926.914-.926 1.64v.111c0 .428.208.745.585.745" />
                            <path d="m10.273 2.513-.921-.944.715-.698.622.637.89-.011a2.89 2.89 0 0 1 2.924 2.924l-.01.89.636.622a2.89 2.89 0 0 1 0 4.134l-.637.622.011.89a2.89 2.89 0 0 1-2.924 2.924l-.89-.01-.622.636a2.89 2.89 0 0 1-4.134 0l-.622-.637-.89.011a2.89 2.89 0 0 1-2.924-2.924l.01-.89-.636-.622a2.89 2.89 0 0 1 0-4.134l.637-.622-.011-.89a2.89 2.89 0 0 1 2.924-2.924l.89.01.622-.636a2.89 2.89 0 0 1 4.134 0l-.715.698a1.89 1.89 0 0 0-2.704 0l-.92.944-1.32-.016a1.89 1.89 0 0 0-1.911 1.912l.016 1.318-.944.921a1.89 1.89 0 0 0 0 2.704l.944.92-.016 1.32a1.89 1.89 0 0 0 1.912 1.911l1.318-.016.921.944a1.89 1.89 0 0 0 2.704 0l.92-.944 1.32.016a1.89 1.89 0 0 0 1.911-1.912l-.016-1.318.944-.921a1.89 1.89 0 0 0 0-2.704l-.944-.92.016-1.32a1.89 1.89 0 0 0-1.912-1.911z" />
                            <path d="M7.001 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0" />
                        </svg>
                    </NavLink>
                </li>
            }
            else
            {
                <li class="list-group-item"><h3>Error: no se encontró o no existe la publicacion seleccionada</h3></li>
            }
        }
    </ul>
</div>

@code {

    [Parameter]
    public int Id { get; set; }

    public bool cargando { get; set; }

    public Publicacion PublicacionActual { get; set; } = new();

    protected override async Task OnParametersSetAsync()

    preguntas = await Http.GetFromJsonAsync<List<Comentario>>("api/pregunta");6

    {
        cargando = true;
        PublicacionActual = await PublicacionService.ReadPublicacionById(Id);
        await Task.Delay(1000);
        cargando = false;
    }

    public void Ofertar()
    {
        NavMan.NavigateTo("/ofertar/" + PublicacionActual.Id);       
    }

    public void Preguntar(){
        NavMan.NavigateTo("/Preguntar/" + PublicacionActual.Id);  6
    }

    
            
}